<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scroll_view_vacation"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Vacation Title"

            android:textStyle="bold" />

        <EditText
            android:id="@+id/editTextVacationTitle"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:hint="ex: Scranton, PA"
            android:inputType="textCapWords" />

        <!-- Hotel -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Hotel / Accommodation"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editTextHotel"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:hint="ex: Dwight Schrutes Bed and Breakfast"
            android:inputType="textCapWords" />

        <!-- Start Date -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Start Date"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editTextStartDate"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:clickable="true"
            android:focusable="false"
            android:hint="MM/dd/yyyy"
            android:inputType="date" />

        <!-- End Date -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="End Date"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editTextEndDate"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:clickable="true"
            android:focusable="false"
            android:hint="MM/dd/yyyy"
            android:inputType="date" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Excursions"
            android:textStyle="bold"
            android:layout_marginTop="12dp"
            />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewExcursions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:nestedScrollingEnabled="false"/>
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal">
        <Button
           android:id="@+id/buttonAddExcursion"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"

           android:text="Add Excursion" />
           <Button
               android:id="@+id/buttonEditExcursions"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
               android:text="Edit Excursions" />
       </LinearLayout>

        <Button
            android:id="@+id/buttonSaveVacation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Save Vacation" />
        <Button
            android:id="@+id/buttonShareVacation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Share Vacation" />
        <Button
            android:id="@+id/buttonViewVacationDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="View Details"
            android:textColor="@android:color/black" />

        <Button
            android:id="@+id/buttonHome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Return Home"
            />

        <Button
            android:id="@+id/buttonDeleteVacation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Delete Vacation"
            android:textColor="@android:color/holo_red_dark"
            />
    </LinearLayout>
</ScrollView>
