<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scroll_view_vacation"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Vacation Title"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editTextVacationTitle"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:hint="e.g., Summer in Hawaii"
            android:inputType="textCapWords" />

        <!-- Hotel -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Hotel / Accommodation"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editTextHotel"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:hint="e.g., Hilton Waikiki"
            android:inputType="textCapWords" />

        <!-- Start Date -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Start Date"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editTextStartDate"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:clickable="true"
            android:focusable="false"
            android:hint="MM/dd/yyyy"
            android:inputType="date" />

        <!-- End Date -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="End Date"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editTextEndDate"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:clickable="true"
            android:focusable="false"
            android:hint="MM/dd/yyyy"
            android:inputType="date" />


        <Button
            android:id="@+id/buttonSaveVacation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Save Vacation" />


        <Button
            android:id="@+id/buttonDeleteVacation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Delete Vacation"
            android:textColor="@android:color/holo_red_dark"
            android:visibility="gone" />
    </LinearLayout>
</ScrollView>
