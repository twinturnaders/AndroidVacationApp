<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="activityButtonStyle">
        <item name="android:textColor">@color/darker_green</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textStyle">bold</item>
        <item name="android:buttonStyle">@style/Widget.MaterialComponents.Button</item>
    </style>

    <style name="DeleteButtonStyle">
        <item name="android:background">@drawable/activity_button</item>
        <item name="android:textColor">@color/indian_red</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/montserrat</item>

        <item name="android:textStyle">bold</item>
        <item name="android:buttonStyle">@style/Widget.MaterialComponents.Button</item>
    </style>

    <style name="navButton">
        <item name="android:background">@drawable/nav_button</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/montserrat</item>

        <item name="android:textStyle">bold</item>
        <item name="android:radius">16dp</item>
        <item name="android:buttonStyle">@style/Widget.MaterialComponents.Button</item>

    </style>




    <style name="backgrounds">
        <item name="android:background">@drawable/text_backgrounds</item>
        <item name="android:textColor">@color/darker_green</item>
    </style>

    <style name="buttonBackground">
        <item name="android:backgroundTint">@color/cadet_blue</item>
                <item name="android:textColor">@color/darker_green</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="navbuttonBackground">
        <item name="android:backgroundTint">@color/slate_gray</item>
        <item name="android:textColor">@color/darker_green</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textStyle">bold</item>
    </style>


</resources>